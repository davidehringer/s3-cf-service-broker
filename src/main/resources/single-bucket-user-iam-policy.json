{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Deny",
            "Action": [
                "s3:*"
            ],
            "Resource": "arn:aws:s3:::${bucketName}/config/*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Resource": [
                "arn:aws:s3:::${bucketName}/*${suffix}",
                "arn:aws:s3:::${bucketName}/*${suffix}.instruction"
            ]
        }
    ]
}
